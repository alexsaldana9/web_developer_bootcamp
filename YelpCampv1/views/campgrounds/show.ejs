<%- include("../partials/header") %>

<div class="row">
    <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 1</li>
            <li class="list-group-item">Info 1</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="img-thumbnail">
            <img src="<%= camp.image %>" class="img-responsive">
            <div class="caption-full">
                <p class="float-right">$12.00/night</p>
                <h3><a href="#"><%= camp.name %></a></h3>
            </div>
            <p><%= camp.location %></p>
            <p><%= camp.description %></p>
            <p><a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/edit"> Edit Camp</a></p>
            <!-- <form action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form> -->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                Delete Camp
            </button>
        </div>
        <div class="card card-body bg-light">
            <% camp.comments.forEach(function(comment) { %>
                <div class="row">
                    <div class="col-md-10">
                        <p><%= comment.text %> <br>
                            <strong><%= comment.author.username %></strong>
                        </p> 
                    </div>
                    <div class="col-md-2">
                        10days ago
                    </div>
                </div>
                <hr>
    
            <% }) %>
            <a href="/campgrounds/<%= camp._id %>/comments/new" class="btn btn-primary"> Leave a Comment </a>
        </div>
     </div>
</div>


  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Would you like to delete <%= camp.name %> ?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <form action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
             <button class="btn btn-danger">Delete</button>
            </form>
        </div>
      </div>
    </div>
  </div>

<%- include("../partials/footer") %>