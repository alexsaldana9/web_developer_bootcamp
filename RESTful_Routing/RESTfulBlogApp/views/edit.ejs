
<%- include("partials/header") %>

<h1>Edit Blog - <%= blog.title %></h1>

<form action="/blogs/<%=blog._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>" >
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>">
    </div>
    <div class="form-group">
      <textarea name="blog[body]" rows="3" style="min-width: 100%" >
        <%= blog.body %>
    </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include("partials/footer") %>