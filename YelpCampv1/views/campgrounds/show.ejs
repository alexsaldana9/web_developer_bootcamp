<%- include("../partials/header") %>

<div class="row">
    <div class="col-md-3">
        <p class="lead">YelpCamp</p>
        <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 1</li>
            <li class="list-group-item">Info 1</li>
        </div>
    </div>
    <div class="col-md-9">
        <div class="img-thumbnail">
            <img src="<%= camp.image %>" class="img-responsive">
            <div class="caption-full">
                <p class="float-right">$12.00/night</p>
                <h3><a href="#"><%= camp.name %></a></h3>
            </div>
            <p><%= camp.location %></p>
            <p><%= camp.description %></p>
            <p><a class="btn btn-warning" href="/campgrounds/<%= camp._id %>/edit"> Edit Camp</a></p>
        </div>
        <div class="card card-body bg-light">
            <% camp.comments.forEach(function(comment) { %>
                <div class="row">
                    <div class="col-md-10">
                        <p><%= comment.text %> <br>
                            <strong><%= comment.author.username %></strong>
                        </p> 
                    </div>
                    <div class="col-md-2">
                        10days ago
                    </div>
                </div>
                <hr>
    
            <% }) %>
            <a href="/campgrounds/<%= camp._id %>/comments/new" class="btn btn-primary"> Leave a Comment </a>
        </div>
     </div>
</div>

<%- include("../partials/footer") %>