<%- include("partials/header") %>

<header class="jumbotron">
    <h1>Campgrounds</h1>
    <p>View the campgrounds from the National Parks</p>
    <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
    </p>
</header>

<div class="row">
    <div class="col-sm-12">
        <h3>Most popular campgrounds</h3>
    </div>
</div>


    <div class="row">

    
    <% campgrounds.forEach(function(campground){ %>

        <div class="mb-20 col-sm-6">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= campground.name %></h5>
                  <p class="card-text"><strong>Location: </strong><%= campground.location %></p>
                  <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                </div>
              </div>
        </div>

    <% }); %>
</div>


<%- include("partials/footer") %>