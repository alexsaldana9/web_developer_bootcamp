<%- include("../partials/header") %>
<div class="row">
    <h1>Create a New Campgrounds</h1>

    <div class="col-sm-6">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name of campground">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="location" placeholder="Location -  State" >
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Place image url" >
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" value="submit">Submit</button>
            </div>
        </form>
        
        <a href="/campgrounds">Back</a>
    </div>

</div>


<%- include("../partials/footer") %>